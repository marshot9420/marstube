doctype html 
html(lang="ko")
    head
        include partials/meta
        include partials/meta-og
        //- 모바일 구현 후 모바일 앱 미리보기 설정 meta 태그 (al:ios, al:android) 추가
        title #{pageTitle} | MarsTube
        link(rel="stylesheet", href="/static/css/styles.css")
        link(rel="stylesheet" href="https://kit.fontawesome.com/bc59b8bbb2.css" crossorigin="anonymous")
        link(link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous")
        include partials/icon
        block head
    body
        header
            div 
                a(href="/")
                    img(src="/static/images/f5c996be24f8f2480be6.png", height=50, width=50)
            div 
                form(method="GET", action="/search")
                    input(type="text", name="keyword", placeholder="Search by Title")
                    button(type="submit")
                        i(class="fa-light fa-magnifying-glass")
            if !loggedIn
                div 
                    ul 
                        li 
                            a(href="/signup") Sign Up 
                        li 
                            a(href="/signin") Sign In 
                
            else 
                div.header__avatar
                    img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
                div(id="hidden-menu") 
                    ul 
                        li 
                            a(href=`/users/${loggedInUser._id}`) #{loggedInUser.username}
                        li 
                            a(href="/users/edit") Edit Profile
                        li 
                            a(href="/videos/upload") Upload
                        li 
                            a(href="/users/signout") Sign Out
        main 
            block content 
        include partials/footer
        script(src="/static/js/main.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous")
        block scripts