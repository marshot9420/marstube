extends base

block content 
    div.form-container 
        if errorMessage 
            span=errorMessage
        form(method="POST")
            input(type="text", name="username", placeholder="Username", required)
            input(type="password", name="password", placeholder="Password", required)
            input(type="submit", value="Sign In")
            div.social-container
                div.social-signin 
                    i(class="fa-brands fa-github fa-lg")
                    a(href="/users/github/start") Continue with Github
                div.social-signin
                    i(class="fa-brands fa-google fa-lg")
                    a(href="/users/google/start") Continue with Google
                div.social-signin
                    i(class="fa-solid fa-comment fa-lg")
                    a(href="/users/kakao/start") Continue with Kakao