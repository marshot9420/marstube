extends ../base

block content 
    div.form-container
        video#preview
        button#actionBtn Start Recording
        if errorMessage 
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File 
            input(id="video", type="file", name="video", accept="video/*", required)
            label(for="thumb") Thumbnail File
            input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(type="text", name="title", placeholder="Title" minlength=1, maxlength=80, required)
            input(type="text", name="description", placeholder="Description", minlength=1, maxlength=500, required)
            input(type="text", name="hashtags", placeholder="Hashtags", required)
            input(type="submit" value="Upload")

block scripts
    script(src="/static/js/recorder.js") 