extends ../base

block content
    div.form-container
        if errorMessage
            span=errorMessage
        form(method="post")
            input(type="password", name="oldPassword", placeholder="Old Password")
            input(type="password", name="newPassword", placeholder="New Password")
            input(type="password", name="confirmNewPassword", placeholder="New Password Confirmation")
            input(type="submit", value="Change Password")