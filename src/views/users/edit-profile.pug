extends ../base

block content 
    div.form-container
        img(src=loggedInUser.avatarUrl, height=100, width=100, crossorigin).avatar
        if errorMessage 
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            label(for="avatar") Profile
            input(id="avatar", type="file", name="avatar", accept=".png, .jpg, .jepg")
            input(type="text", name="name", placeholder="Name", value=loggedInUser.name, required)
            input(type="email", name="email", placeholder="Email", value=loggedInUser.email, required)
            input(type="text", name="username", placeholder="Username", value=loggedInUser.username, required)
            input(type="text", name="location", placeholder="Location", value=loggedInUser.location, required)
            input(type="submit", value="Update Profile")
            if !loggedInUser.socialOnly
                hr
                a(href="change-password") Change Password &rarr;